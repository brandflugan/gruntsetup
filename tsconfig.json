{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "noImplicitAny": false,
        "lib": [
            "es2016",
            "dom",
            "es5"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}