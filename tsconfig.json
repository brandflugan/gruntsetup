{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "noImplicitAny": false,
        "types": ["three", "requirejs"],
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
        "node_modules"
    ]
}